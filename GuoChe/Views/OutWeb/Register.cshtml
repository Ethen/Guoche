@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width">    
    <style ></style>
    <link href="~/Content/style.css" rel="stylesheet" />    
    <link href="~/Content/layer.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.1.js" type="text/javascript"></script>        
    <script src="~/source/layer.js" type="text/javascript"></script>
    <title>注册</title>
</head>
<body>
    <header>注册</header>
    <div class="logo">
        <img src="~/Images/logo.png" width="100%" height="100%" />
    </div>
    @*<form name="form1" action="RegisterNew" method="post">*@
    <input type="hidden" id="hid_SCode" value="@ViewBag.SCode" />
        <div class="div_f">
            <div class="div_col" id="me">
                <div class="div_c_l"><span>手机号</span></div>
                <div class="div_c_r">
                    <input type="text" name="phone" id="phone" placeholder="请输入手机号">

                </div>
            </div>
            <div style="clear:both"></div>
        </div>
        <div class="div_f">
            <div class="div_col" id="me">
                <div class="div_c_l">
                    <span style="width:70px;">验证码</span>
                </div>
                <div class="div_c_r">
                    <input type="tel" name="code" id="code" placeholder="请输入验证码">
                    <input class="yuying" id="dynamic" value="获取验证码" type="button">
                </div>
            </div>
            <div style="clear:both"></div>
        </div>
        <div class="div_f">
            <div class="div_col" id="me">
                <div class="div_c_l">
                    <span style="width:70px;">登录密码</span>
                </div>
                <div class="div_c_r">
                    <input type="password" name="password" id="password" value="" placeholder="登录密码至少8位">

                </div>
            </div>
            <div style="clear:both"></div>
        </div>
        <div class="div_f">
            <div class="div_col" id="me">
                <div class="div_c_l"><span>确认登陆密码</span></div>
                <div class="div_c_r">
                    <input type="password" name="password" id="password_qr" value="" placeholder="确认安全密码">

                </div>
            </div>
            <div style="clear:both"></div>
        </div>
        <div class="div_f">
            <div class="div_col" id="me">
                <div class="div_c_l"><span>邀请人</span></div>
                <div class="div_c_r">
                    <input type="text" name="yq" id="yq" value="" placeholder="请输入邀请人">

                </div>
            </div>
            <div style="clear:both"></div>
        </div>
        <button id="submit" class="btn_1">注册</button>
    @*</form>*@
</body>
</html>
<script>
    $(function () {


        //手机号
        $(".btn_1").click(function () {
            var phone = $("#phone").val();
            var vcode = $("#dynamic").val();
            var password = $("#password").val();
            var password_qr=$("#password_qr").val();

            var myreg = /^(((13[0-9]{1})|(15[0-9]{1})|(18[0-9]{1})|(17[0-9]{1}))+\d{8})$/;
            if (phone == "") {
                layer.open({
                    content: '手机号不能为空',
                    style: 'background:rgba(0,0,0,0.6); color:#fff; border:none;',
                    time: 3
                });
                $("#phone").focus();
                return false;
            } else if (phone.length > 11) {
                layer.open({
                    content: '手机号格式有误',
                    style: 'background:rgba(0,0,0,0.6); color:#fff; border:none;',
                    time: 3
                });
                $("#phone").focus();
                return false;
            }

            if (vcode == "") {
                layer.open({
                    content: '验证码不能为空',
                    style: 'background:rgba(0,0,0,0.6); color:#fff; border:none;',
                    time: 3
                });
                $("#dynamic").focus();
                return false;
            }
            if (password=="") {
                layer.open({
                    content: '密码不能为空',
                    style: 'background:rgba(0,0,0,0.6); color:#fff; border:none;',
                    time: 3
                });
                $("#password").focus();
                return false;
            }
            if (password_qr == "") {
                layer.open({
                    content: '确认密码不能为空',
                    style: 'background:rgba(0,0,0,0.6); color:#fff; border:none;',
                    time: 3
                });
                $("#password").focus();
                return false;
            }
            if (password != password_qr) {
                layer.open({
                    content: '两次密码不一致，请重新输入！',
                    style: 'background:rgba(0,0,0,0.6); color:#fff; border:none;',
                    time: 3
                });
                return false;
            }
            var SCode= $("#hid_SCode").val();
            $.ajax({
                type: 'POST',//提交方式 post 或者get
                url: "RegisterNew?telephone=" + $("#phone").val() + "&vcode=" + vcode + "&password=" + password + "&Scode=" + Scode,//提交到那里 后他的服务                                
                success: function (msg) {
                    alert(msg);
                    window.location.href = "/OutWeb/Success";
                },
                error: function () {
                    //alert("提交失败的处理函数！");
                }
            });

        })


        //倒计时
        $("#dynamic").click(function (e) {
            var phone = $("#phone").val();
            var vcode = $("#dynamic").val();
            var password = $("#password").val();
            var password_qr = $("#password_qr").val();

            var myreg = /^(((13[0-9]{1})|(15[0-9]{1})|(18[0-9]{1})|(17[0-9]{1}))+\d{8})$/;
            if (phone == "") {
                layer.open({
                    content: '手机号不能为空',
                    style: 'background:rgba(0,0,0,0.6); color:#fff; border:none;',
                    time: 3
                });
                $("#phone").focus();
                return false;
            } else if (phone.length != 11) {
                layer.open({
                    content: '手机号格式有误',
                    style: 'background:rgba(0,0,0,0.6); color:#fff; border:none;',
                    time: 3
                });
                $("#phone").focus();
                return false;
            }

            $.ajax({
                type: 'POST',//提交方式 post 或者get
                url: "/ApiUser/RegisterVCode?telephone=" + $("#phone").val(),//提交到那里 后他的服务                                
                success: function (msg) {
                    
                },
                error: function () {
                    alert("提交失败的处理函数！");
                }
            });


            var Time = 60;
            var TimeDown = setInterval(timedown, 1000);
            function timedown() {
                $("#dynamic").attr("disabled", true);
                $("#dynamic").val("" + Time + "s");
                if (Time == 0) {
                    $("#dynamic").val("重新获取").removeAttr("disabled");
                    clearInterval(TimeDown);
                }
                Time--;
            }
        })
    });
</script>